#include<iostream>
using namespace std; 
  
void print(int n) 
{ 
    int var1 = 1, var2 = 1; 
  
    for (int i = 0; i <= n; i++) { 
        for (int j = n - 1; j > i; j--) { 
            cout << " "; 
        } 
  
        for (int k = 1; k <= var1; k++) { 
            cout << abs(k - var2); 
        } 
  
        var1 += 2; 
        var2++; 
        cout << "\n"; 
    } 
} 
  
int main() 
{ 
    int n;
	cin>>n;	
    print(n); 
      
    return 0; 
}
